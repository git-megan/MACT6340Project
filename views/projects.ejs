<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="../images/highlights.svg" />
    <title>NFT Projects</title>
    <meta name="author" content="Megan" />
    <meta
      name="description"
      content="A page to showcase multiple NFT projects"
    />
    <!--Using Bootstrap for most styling-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <!--Header area contains navigation bar-->
    <%- include('header'); %>
    <!-- Hero section -->
    <div class="space"></div>

    <div class="px-4 py-5 my-5 text-center">
      <img
        class="d-block mx-auto mb-4"
        src="../images/highlights.svg"
        alt=""
        width="72"
        height="57"
      />
      <h1 class="display-5 fw-bold">Project Work</h1>
      <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">
          Megan M.'s creative technology projects spanning visual arts, coding,
          research, and design.
        </p>
      </div>
    </div>

    <div class="b-example-divider"></div>

    <!--NFT projects display area-->
    <div class="container px-4 py-5">
      <h2 class="pb-2 border-bottom">NFT Art Projects</h2>
      <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
        <% projectArray.forEach((item, index) => { %>
        <div class="col">
          <!-- <a href="/project/<%= index + 1 %>"><%= item %></a> -->
          <%- include('projectCard2', {ident: item.id, image: item.img_url,
          name: item.project_name, description: item.project_description,
          artMedium: item.medium, openDate: new
          Date(item.open_date_gmt).getFullYear()}); %>
        </div>
        <% }); %>
      </div>
    </div>

    <div class="space"></div>

    <!--Creative technology projects display area-->
    <div class="container px-4 py-5">
      <h2 class="pb-2 border-bottom">Creative Technology Projects</h2>
      <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
        <div class="col">
          <!-- Links to Mobile Computing & AR Project -->
          <div
            class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg fadein"
            role="img"
            aria-label="Photo from augmented reality project"
            style="
              background: linear-gradient(
                  to bottom,
                  rgba(0, 0, 0, 0.2) 0%,
                  /* transparent top */ rgba(0, 0, 0, 0.95) 100%
                    /* dark bottom */
                ),
                url('/images/adobe-aero-cover.jpg');
              background-size: cover;
            "
          >
            <a
              href="/ar-project"
              class="stretched-link text-decoration-none text-white"
              aria-label="View augmented reality project details page"
            >
              <div
                class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1"
              >
                <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">
                  AR "Safe Place" Environment
                </h3>
                <p>
                  A technical exploration of how augmented reality can be used
                  in therapy to create a "safe place" environment.
                </p>
                <ul class="d-flex list-unstyled mt-auto">
                  <li class="d-flex align-items-center me-3">
                    <!--code slash svg icon-->
                    <svg
                      class="bi me-2"
                      width="1em"
                      height="1em"
                      fill="currentColor"
                      role="img"
                      aria-label="Medium:"
                    >
                      <path
                        d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0m6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0"
                      />
                    </svg>
                    <small>Adobe Aero</small>
                  </li>
                  <li class="d-flex align-items-center">
                    <!--calendar week svg icon-->
                    <svg
                      class="bi me-2"
                      width="1em"
                      height="1em"
                      fill="currentColor"
                      role="img"
                      aria-label="Year minted:"
                    >
                      <path
                        d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5z"
                      />
                      <path
                        d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"
                      />
                    </svg>
                    <small>2025</small>
                  </li>
                </ul>
              </div>
            </a>
          </div>
        </div>
        <div class="col">
          <!-- Links to Mobile Computing & AR Project -->
          <div
            class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg fadein"
            role="img"
            aria-label="Photo from data expressions project"
            style="
              background: linear-gradient(
                  to bottom,
                  rgba(0, 0, 0, 0.2) 0%,
                  /* transparent top */ rgba(0, 0, 0, 0.95) 100%
                    /* dark bottom */
                ),
                url('/images/sonicpi.png');
              background-size: cover;
            "
          >
            <a
              href="/data-project"
              class="stretched-link text-decoration-none text-white"
              aria-label="View augmented reality project details page"
            >
              <div
                class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1"
              >
                <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">
                  Data Sonification
                </h3>
                <p>
                  A technical exploration of how augmented reality can be used
                  in therapy to create a "safe place" environment.
                </p>
                <ul class="d-flex list-unstyled mt-auto">
                  <li class="d-flex align-items-center me-3">
                    <!--code slash svg icon-->
                    <svg
                      class="bi me-2"
                      width="1em"
                      height="1em"
                      fill="currentColor"
                      role="img"
                      aria-label="Medium:"
                    >
                      <path
                        d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0m6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0"
                      />
                    </svg>
                    <small>Sonic Pi</small>
                  </li>
                  <li class="d-flex align-items-center">
                    <!--calendar week svg icon-->
                    <svg
                      class="bi me-2"
                      width="1em"
                      height="1em"
                      fill="currentColor"
                      role="img"
                      aria-label="Year minted:"
                    >
                      <path
                        d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm-5 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5z"
                      />
                      <path
                        d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"
                      />
                    </svg>
                    <small>2025</small>
                  </li>
                </ul>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <!--Footer section-->
    <div class="container"><%- include('footer'); %></div>
    <!--Required Bootstrap Script-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"
    ></script>
    <script type="module" src="./js/index.js"></script>
  </body>
</html>
